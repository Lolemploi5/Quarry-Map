<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:contentInsetStartWithNavigation="12dp"
            app:contentInsetEndWithActions="0dp"
            app:titleMarginStart="12dp"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QuarryMap"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_medium" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:text="Importer"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="14sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="16dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@android:color/white"
                    app:iconSize="18dp"
                    app:iconPadding="8dp"
                    app:cornerRadius="18dp"
                    app:elevation="0dp"
                    app:rippleColor="#33FFFFFF"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/offlineBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appBarLayout"
        android:background="#FFA000"
        android:padding="8dp"
        android:text="Mode hors-ligne actif"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <!-- Container pour les fragments -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavBar"
        android:layout_below="@id/offlineBanner" />

    <!-- Bottom navigation bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#1E1E1E"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_communes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_communes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_communes"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Communes"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_favorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_favorites"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorites"
                android:tint="#80FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Favoris"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bouton d'ajout -->
    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/bottomNavBar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="Ajouter des planches"
        android:src="@drawable/ic_add" />

    <!-- Conteneur de progression -->
    <RelativeLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavBar"
        android:layout_below="@id/offlineBanner"
        android:background="#80000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Téléchargement en cours..."
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>
