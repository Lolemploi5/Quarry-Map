<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="16dp">

    <!-- Poignée de la bottom sheet -->
    <View
        android:id="@+id/bottom_sheet_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_sheet_handle_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Titre de la bottom sheet -->
    <TextView
        android:id="@+id/bottom_sheet_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Planches disponibles"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_handle" />

    <!-- Sous-titre explicatif -->
    <TextView
        android:id="@+id/bottom_sheet_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Sélectionnez une planche à superposer sur la carte"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_title" />

    <!-- RecyclerView pour la liste des planches -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/planches_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_subtitle"
        tools:itemCount="3"
        tools:listitem="@layout/item_planche_small" />

    <!-- Bouton pour ajouter de nouvelles planches -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_planche_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ajouter une planche"
        android:textColor="@android:color/white"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/planches_recycler_view" />

    <!-- Section contrôles d'édition de planche (initialement invisible) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/planche_controls_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/controls_background"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_planche_button">

        <!-- Titre de la section contrôles -->
        <TextView
            android:id="@+id/controls_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ajuster la planche"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@id/close_controls_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bouton pour fermer les contrôles -->
        <ImageButton
            android:id="@+id/close_controls_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Fermer les contrôles"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <!-- Contrôle de rotation -->
        <TextView
            android:id="@+id/rotation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Rotation"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/controls_title" />

        <com.google.android.material.slider.Slider
            android:id="@+id/rotation_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:valueFrom="0"
            android:valueTo="360"
            app:layout_constraintEnd_toStartOf="@id/rotation_value"
            app:layout_constraintStart_toEndOf="@id/rotation_label"
            app:layout_constraintTop_toTopOf="@id/rotation_label"
            app:layout_constraintBottom_toBottomOf="@id/rotation_label" />

        <TextView
            android:id="@+id/rotation_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0°"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rotation_label"
            app:layout_constraintBottom_toBottomOf="@id/rotation_label" />

        <!-- Contrôle de taille -->
        <TextView
            android:id="@+id/scale_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Taille"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rotation_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/scale_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:valueFrom="0.1"
            android:valueTo="2.0"
            android:value="1.0"
            app:layout_constraintEnd_toStartOf="@id/scale_value"
            app:layout_constraintStart_toEndOf="@id/scale_label"
            app:layout_constraintTop_toTopOf="@id/scale_label"
            app:layout_constraintBottom_toBottomOf="@id/scale_label" />

        <TextView
            android:id="@+id/scale_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="100%"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/scale_label"
            app:layout_constraintBottom_toBottomOf="@id/scale_label" />

        <!-- Contrôle d'opacité -->
        <TextView
            android:id="@+id/opacity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Opacité"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scale_label" />

        <com.google.android.material.slider.Slider
            android:id="@+id/opacity_slider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:valueFrom="0.0"
            android:valueTo="1.0"
            android:value="0.7"
            app:layout_constraintEnd_toStartOf="@id/opacity_value"
            app:layout_constraintStart_toEndOf="@id/opacity_label"
            app:layout_constraintTop_toTopOf="@id/opacity_label"
            app:layout_constraintBottom_toBottomOf="@id/opacity_label" />

        <TextView
            android:id="@+id/opacity_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="70%"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/opacity_label"
            app:layout_constraintBottom_toBottomOf="@id/opacity_label" />

        <!-- Boutons d'action -->
        <Button
            android:id="@+id/save_position_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Enregistrer la position"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/opacity_label" />

        <Button
            android:id="@+id/remove_planche_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Retirer"
            android:textColor="#FF5555"
            app:layout_constraintEnd_toStartOf="@id/save_position_button"
            app:layout_constraintTop_toBottomOf="@id/opacity_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
