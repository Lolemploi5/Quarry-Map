<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background_dark">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Renommer la planche"
        android:textSize="18sp"
        android:textColor="#EFEFEF"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_dark_background"
        android:hint="Nom de la planche"
        android:textColorHint="#777777"
        android:textColor="#EFEFEF"
        android:padding="12dp"
        android:inputType="text"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textColor="#AAAAAA"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renommer"
            android:textColor="#80CBC4"
            android:background="@android:color/transparent" />
    </LinearLayout>
</LinearLayout>
